<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:jpacontaineraddressbookh2db,LOCK_TIMEOUT=10000</property>
		<property name="hibernate.dialect"> org.hibernate.dialect.H2Dialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create-drop</property>
		<!-- <property name="hibernate.current_session_context_class">thread</property> -->
		<mapping class="nl.enovation.addressbook.jpa.contacts.Contact" />
		<mapping class="nl.enovation.addressbook.jpa.contacts.PhoneNumberEntry" />
	</session-factory>
</hibernate-configuration>